<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <org.vnp.storeapp.views.MainHeaderView
            android:id="@+id/mainHeaderView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </org.vnp.storeapp.views.MainHeaderView>

        <LinearLayout
            android:id="@+id/main_top_content"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="@color/white"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/main_top_content_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/main_top_b1"
                    android:layout_width="200dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/imageView1_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imgsocial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <org.vnp.storeapp.views.MTetViewBold
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_main_1"
                            android:textStyle="bold" />

                        <org.vnp.storeapp.views.MTetView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_main_2" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/color_pager_main" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <org.vnp.storeapp.blocklist.LoaderView
        android:id="@+id/loaderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </org.vnp.storeapp.blocklist.LoaderView>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dip" />

</RelativeLayout>