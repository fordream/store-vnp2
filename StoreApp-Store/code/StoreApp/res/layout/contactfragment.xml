<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <org.vnp.storeapp.views.MainHeaderView
        android:id="@+id/mainHeaderView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </org.vnp.storeapp.views.MainHeaderView>

    <LinearLayout
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/map_content"
        android:layout_below="@+id/mainHeaderView1"
        android:layout_gravity="center"
        android:cacheColorHint="@null"
        android:divider="@null"
        android:gravity="center"
        android:listSelector="@null"
        android:orientation="vertical" >

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/map_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/map_content_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >
        </RelativeLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/streetview" />
    </RelativeLayout>

</LinearLayout>