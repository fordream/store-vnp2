<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/peoplevitem_main"
    android:layout_width="@dimen/dimen_290dp"
    android:layout_height="@dimen/dimen_130dp"
    android:background="@drawable/m_back_1"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/peoplevitem_main_img"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/email" />

    <org.vnp.storeapp.views.MTetView
        android:id="@+id/peoplevitem_main_text"
        android:layout_width="@dimen/dimen_290dp"
        android:textSize="@dimen/dimen_25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="MTetViewBold"
        android:textColor="#000000" />

</RelativeLayout>