<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/peopleitem_content"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/people_item_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <org.vnp.storeapp.views.MTetViewBold
            android:id="@+id/peopleitem_name"
            android:layout_width="@dimen/dimen_290dp"
            android:textSize="@dimen/dimen_23dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/peopleitem_img"
            android:layout_width="@dimen/dimen_170dp"
            android:layout_height="@dimen/dimen_170dp"
            android:text=""
            android:typeface="monospace" />

        <org.vnp.storeapp.views.MTetView
            android:id="@+id/peopleitem_time"
            android:layout_width="@dimen/dimen_290dp"
            android:textSize="@dimen/dimen_20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#000000"
            android:typeface="monospace" />

        <Gallery
            android:id="@+id/gallery1"
            android:layout_width="@dimen/dimen_290dp"
            android:layout_height="@dimen/dimen_130dp"
            android:background="@drawable/gallery_bg"
            android:cacheColorHint="@android:color/transparent"
            android:fadingEdgeLength="0dp"
            android:spacing="0dp"
            android:unselectedAlpha="1.0" />
    </LinearLayout>

</LinearLayout>