<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center">

    <LinearLayout
        android:id="@+id/llOrderMenu"
        android:layout_width="252dip"
        android:layout_height="287dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="57dip"
            android:src="@drawable/loxley_logo" android:layout_weight="57"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:orientation="vertical" android:layout_weight="20">
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/btn_xml"
            android:text="@string/order"
            android:textStyle="bold" android:layout_weight="35"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="vertical" android:layout_weight="35">
        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="35"
            android:background="@drawable/btn_xml"
            android:text="@string/com"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="vertical" android:layout_weight="105">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>