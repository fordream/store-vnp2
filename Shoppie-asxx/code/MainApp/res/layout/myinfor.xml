<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myinfor_background"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/myfinfor_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/myinfor_location"
            android:layout_width="200dip"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:textColor="#000000"
                android:id="@+id/makerinfor_txt_tentau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="TextView" />

            <TextView
                 android:textColor="#000000"
                android:id="@+id/makerinfor_txt_sohieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="TextView" />

            <TextView
                 android:textColor="#000000"
                android:id="@+id/makerinfor_txt_toado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="TextView" />
        </LinearLayout>

        <ImageView
            android:id="@+id/myinfor_img_baodong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bao_dong" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="@string/message"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>