<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myinfor_background"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#123456"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/myfinfor_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/myinfor_location"
            android:layout_width="200dip"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/makerinfor_txt_tentau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/makerinfor_txt_sohieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/makerinfor_txt_toado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/makerinfor_txt_khoangcach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/makerinfor_txt_thoitiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#000000" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>