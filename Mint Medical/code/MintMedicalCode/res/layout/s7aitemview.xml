<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/s7itemview_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/aboutactivityitemview_ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/aboutactivityitemview_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/main_item_img2" />

            <vnp.mr.mintmedical.view.AvatarView
                android:id="@+id/avatarView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" >
            </vnp.mr.mintmedical.view.AvatarView>

            <vnp.mr.mintmedical.view.RobotoBoldTextView
                android:id="@+id/aboutactivityitemview_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/aboutactivityitemview_img2"
                android:layout_toRightOf="@+id/avatarView1"
                android:text="TextView"
                android:textStyle="bold"
                android:typeface="serif" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/s10item_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#e0e0e0"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>