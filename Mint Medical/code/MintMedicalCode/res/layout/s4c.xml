<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:gravity="center|top"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/s4cmaincontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <vnp.mr.mintmedical.view.BaseTextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text="@string/s4c1"
            android:textColor="#333333" />

        <vnp.mr.mintmedical.view.BaseEditTextView
            android:id="@+id/s4cet1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s4c_edt"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/s4c2"
            android:padding="10dip"
            android:textColor="#999999" />

        <Button
            android:id="@+id/s4cbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:background="@drawable/s4c_button" />
    </LinearLayout>

</LinearLayout>