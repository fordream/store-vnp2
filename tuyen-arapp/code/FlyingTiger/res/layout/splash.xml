<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/splash_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_backd"
        android:gravity="center"
        android:orientation="vertical"
        android:scrollbarSize="0dp"
        android:scrollbarThumbVertical="@drawable/tranfer"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_302dp"
                android:background="@drawable/main_m1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/splash_btn_camera"
                    android:layout_width="@dimen/dimen_216dp"
                    android:layout_height="@dimen/dimen_64dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:background="@drawable/button_take_xml" />

                <Button
                    android:id="@+id/splash_btn_abount"
                    android:layout_width="@dimen/dimen_180dp"
                    android:layout_height="@dimen/dimen_38dp"
                    android:layout_marginBottom="@dimen/dimen_25dp"
                    android:background="@drawable/button_open_abount_xml" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_159dp"
                android:layout_height="@dimen/dimen_75dp"
                android:background="@drawable/logo" />

            <TextView
                android:id="@+id/mtextView1"
                style="@style/txtCopyRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:typeface="normal" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="2"
            android:src="@drawable/tranfer" />

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="54"
            android:scaleType="fitCenter"
            android:src="@drawable/main_m1" />

        <ImageView
            android:id="@+id/Button01"
            android:layout_width="@dimen/dimen_216dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="12"
            android:scaleType="fitCenter"
            android:src="@drawable/button_take_xml" />

        <ImageView
            android:id="@+id/Button02"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="9"
            android:scaleType="fitCenter"
            android:src="@drawable/button_open_abount_xml" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="7"
            android:src="@drawable/tranfer" />

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="14"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="7"
            android:src="@drawable/tranfer" />
    </LinearLayout>

    <TextView
        android:id="@+id/TextView01"
        style="@style/txtCopyRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_0dp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:typeface="normal" />

</RelativeLayout>